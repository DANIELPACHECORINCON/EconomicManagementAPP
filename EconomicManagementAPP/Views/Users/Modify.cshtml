@model Users

@{
    ViewData["Title"] = "Modify Users";
}


<div class="divContainer">
    <div class="card bg-dark text-white">
        <h1 class="title">Modify User: @Model.Email</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <form asp-action="Modify">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />
                <div class="mb-3">
                    <label asp-for="StandarEmail" class="form-label"></label>
                    <input type="text" asp-for="StandarEmail" class="form-control" />
                    <span asp-validation-for="StandarEmail" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
