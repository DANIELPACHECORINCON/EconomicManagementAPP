@model Accounts
@{
    ViewData["Title"] = "New Account";
}

<div class="divContainer">
    <div class="card bg-dark text-white">
        <h1 class="title">Register account</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <form asp-action="Create">
                <input type="hidden" asp-for="AccountTypeId" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input type="text" autofocus asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"> </span>
                </div>
                <div class="mb-3">
                    <label asp-for="Balance" class="form-label"></label>
                    <input type="number" asp-for="Money" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"> </span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"> </span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}